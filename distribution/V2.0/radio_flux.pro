      FUNCTION radio_flux, freq, a, b, c


;----------Start RADIO_FLUX----------------------------------------------------

       log_freq = ALOG10(freq)
       log_s = a + b * log_freq + c * log_freq * log_freq
       
       Return, 10^log_s

      End

;----------Func RADIO_FLUX-----------------------------------------------------
;----------NCDRT V2.0----------------------------------------------------------
;----------END-----------------------------------------------------------------
